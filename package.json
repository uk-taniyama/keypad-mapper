{
  "name": "keypad-mapper",
  "version": "1.0.0-alpha.1",
  "description": "",
  "keywords": [
    "keypad",
    "mini-keyboard",
    "keymap"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uk-taniyama/keypad-mapper.git"
  },
  "author": "uk-taniyama",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/uk-taniyama/keypad-mapper/issues"
  },
  "homepage": "https://github.com/uk-taniyama/keypad-mapper#readme",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "keypad-mapper": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "gen": "tsx src/tools/index.ts",
    "cli": "tsx src/cli.ts",
    "doc": "rimraf docs && typedoc",
    "prepack": "npm run build",
    "example": "tsx src/example/index.ts",
    "build": "tsup",
    "lint": "eslint src",
    "lint-fix": "eslint --fix src",
    "test": "vitest",
    "cover": "vitest --coverage",
    "web-cover": "http-server -p 8080 coverage/",
    "web-doc": "http-server -p 8081 docs/",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=20"
  },
  "lint-staged": {
    "*.ts": "eslint --fix"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "debug": "^4.4.0",
    "json-stringify-pretty-compact": "^4.0.0",
